<div class="container">
 <div class="row">
  <div class="col-sm6 col-md-4 col-lg-6 mr-2 mt-3 text-center bg-light">
 <h2><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h2>
  </div>
 </div>
 <div class="row mt-5">
  <%= form_with model:@customer, url: admin_customer_path(@customer),local:true do |f| %>
 <table class="col-sm-12 col-md-10 col-lg-8 m-auto table table-borderless">
    <tr>
      <th>会員ID</th><td><%= @customer.id %></td>
    </tr>
    <tr>
      <th>氏名</th>
      <td class="input-group">
       <%= f.text_field :last_name,class:"form-control mr-3" %> 
       <%= f.text_field :first_name,class:"form-control" %> 
      </td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td class="input-group">
       <%= f.text_field :last_name_kana,class:"form-control mr-3" %> 
       <%= f.text_field :first_name_kana,class:"form-control" %> 
      </td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.text_field :email,class:"form-control" %> </td>
    </tr>
    <tr>
      <th>会員ステータス</th> 
      <td> 
      　<%= f.radio_button :is_deleted, true %>
	     　　<%= f.label :is_deleted, "退会" %>
	    　<%= f.radio_button :is_deleted, false %>
	     　　<%= f.label :is_deleted, "有効" %>
      </td>
    </tr>
 </table>
    <div class="mr-5"></div>
    <%= f.submit "変更を保存", class:"btn btn-success ml-5" %>
  <% end %>
 </div>
</div>