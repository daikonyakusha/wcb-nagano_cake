<div class="container">
 <div class="row">
 <h2 class="col-sm6 col-md-4 col-lg-3 mr-2 mt-3 text-center bg-light">商品一覧</h2>
  <%= link_to"", new_admin_item_path,class: 'mt-3 fas fa-plus-circle fa-3x size ml-auto' %>
 </div>
 <div class="row mt-5">
 <table class="col-sm-12 col-md-10 col-lg-8 m-auto table table-hover">
   <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th> 
       <th>販売ステータス</th> 
  </tr>
   </thead>
   <tbody>
    <% @items.each do |item| %>
    <tr>
      <th><%= item.id %></th>
      <th><%= link_to item.name,admin_item_path(item) %></th>
      <th><%= number_to_currency(item.price,:precision => 0,:format => "%n") %></th>
      <th><%= item.genre.name %></th> 
      <th>
	       <% if item.is_active == true then %>
	        <p class="text-success"><strong>販売中</strong></p>
	   　  <% else %>
	   　   <p class="text-secondary"><strong>販売停止</strong></p>
        <% end %>
	     </th> 
  </tr>
  <% end %>
   </tbody>
 </table>
 </div>
 <div class="row">
  <div class="col-sm-12 col-md-12 col-lg-3 m-auto">
   <%= paginate @items ,class:"m-auto"%>
  </div>
 </div>
 </div>