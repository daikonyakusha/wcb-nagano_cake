<div class="container">
 <div class="row">
  <h2 class="col-sm-6 col-md-4 col-lg-3 mr-2 mt-3 text-center bg-light">商品詳細</h2>
 </div>
 <div class="row">
  <div class="col-sm-6 col-md-4 col-lg-4 mr-2 mt-4">
   <%= attachment_image_tag	@item, :image, :fill,100,100, size:"300x200", format: 'jpeg' %>
  </div>
  <table class="table table-borderless col-sm-12 col-md-6 col-lg-6 mr-2 mt-3 d-flex align-items-center">
   <thead>
	  <tr><th>商品名</th><td><%= @item.name %></td></tr>
	  <tr><th>商品詳細</th><td><%= @item.introduction %></td></tr>
	  <tr><th>ジャンル</th><td><%= @item.genre.name %></td></tr>
	  <tr><th>税込価格<br>（税抜価格）</th>
	    <td><p><%= number_to_currency(@item.price*1.1,:precision => 0, :format => "%n%u", :unit => "円") %>
	     <br>（<%= number_to_currency(@item.price,:precision => 0, :format => "%n%u", :unit => "円") %> ）</p>
	    </td>
	  </tr> 
	  <tr><th>販売ステータス</th>
	      <td>
	       <% if @item.is_active == true then %>
	        <p class="text-success"><strong>販売中</strong></p>
	     <% else %>
	      <p class="text-secondary"><strong>販売停止</strong></p>
	    <% end %>
	   </td>
	  </tr>
  </table>
  </div>
  <div class="row">
  <%= link_to"編集する", edit_admin_item_path,class: "btn btn-success m-auto" %>
 </div>
</div>