<div class="container">
 <div class="row">
  <h2 class="col-sm-6 col-md-4 col-lg-4 mr-2 mt-3 text-center bg-light">ジャンル一覧・追加</h2>
 </div>
 <div class="mt-3 row">
  <div class="col-sm-10 col-md-8 col-lg-6 mr-2 mt-3">
   <%= form_with model:@genre,url: admin_genres_path, local:true do |f| %>
  	<%= f.label:ジャンル名,class:"mr-4" %>
  	<%= f.text_field :name,class:"mr-4",placeholder:'ジャンル名' %>
  	<%= f.submit "新規登録",class:"mr-4 btn btn-success" %>
   <% end %>
  </div>
 </div>
 <div class="mt-5 row">
  <div class="col-sm-8 col-md-6 col-lg-4 mr-2 mt-3">
  	<table class="table table-hover">
  		<thead>
  			<tr>
  				<th colspan="2">ジャンル</th>
  			</tr>
  		</thead>
  		<tbody>
  			<% @genres.each do |genre| %>
  			<tr>
  				<th><%= genre.name %></th>
  				<th><%= link_to"編集する",edit_admin_genre_path(genre),class:"btn btn-success" %></th>
  			</tr>
  			<% end %>
  		</tbody>
  	</table>
 </div>
</div>