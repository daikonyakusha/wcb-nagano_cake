<div class="container">
 <div class="row">
 	<div class="col-sm6 col-md-4 col-lg-3 mr-2 mt-3 text-center bg-light">
   <h2>マイページ</h2>
  </div>
 </div>
 <div class="row">
 	<div class="col-sm6 col-md-4 col-lg-3 text-center">
   <h4><strong>登録情報</strong></h4>
   <%= link_to "編集する",customers_path, class:"btn btn-success" %>
  </div>
 </div>
 <div class="row">
 <table class="col-sm-12 col-md-10 col-lg-8 mr-2 table table-borderless">
    <tr>
      <th>氏名</th>
      <td><%= @customer.last_name %><%= @customer.first_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @customer.postal_code%></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th> 
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th> 
      <td><%= @customer.email %></td>
    </tr>
 </table>
 </div>
 <div class="row">
 	<div class="col-sm6 col-md-4 col-lg-3 text-center">
   <h4><strong>配送先</strong></h4>
   <%= link_to "一覧を見る",addresses_path, class:"btn btn-primary" %>
  </div>
 </div>
 <div class="row">
 	<div class="col-sm6 col-md-4 col-lg-3 text-center">
   <h4><strong>注文履歴</strong></h4>
   <%= link_to "一覧を見る",orders_path, class:"btn btn-primary" %>
  </div>
 </div>
</div>