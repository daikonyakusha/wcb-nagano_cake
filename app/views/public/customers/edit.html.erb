<div class="container">
 <div class="row">
 	<div class="col-sm6 col-md-4 col-lg-3 mr-2 mt-3 text-center bg-light">
 		<h2>会員情報編集</h2>
  </div>
 </div>
 <div class="row">
  <div class="col-sm10 col-md-10 col-lg-10 mt-3 m-auto">
   <%= form_with model:@customer, url: customers_path ,local:true do |f| %>
   <table class="table table-borderless">
    <tr>
      <th>氏名</th>
      <td class="form-group form-inline">
        <%= f.text_field :last_name,class:"ml-2" %>
        <%= f.text_field :first_name,class:"ml-2" %>
      </td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td class="form-group form-inline">
        <%= f.text_field :last_name_kana,class:"ml-2" %>
        <%= f.text_field :first_name_kana,class:"ml-2" %>
      </td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td class="form-group form-inline">
        <%= f.text_field :postal_code,class:"ml-2",style:"width:200px; height:35px;" %>
      </td>
    </tr>
    <tr>
      <th>住所</th>
      <td class="form-group form-inline">
        <%= f.text_area :address,class:"ml-2",placeholder:'東京都渋谷区代々木神園町0-0',style:"width:600px; height:35px;" %>
      </td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td class="form-group form-inline">
        <%= f.text_field :telephone_number,class:"ml-2",placeholder:'00000000000',style:"width:200px; height:35px;" %>
      </td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td class="form-group form-inline">
        <%= f.text_field :email,class:"ml-2",style:"width:200px; height:35px;"  %>
      </td>
    </tr>
    <tr>
      <th></th>
      <td class="form-group form-inline">
        <%= f.submit "編集内容を保存" ,class:"btn btn-success mr-4" %>
        <%= link_to "退会する", customers_quit_path ,class:"btn btn-danger" %>
      </td>
    </tr>
   </table>
   <% end %>
  </div>
 </div>
</div> 