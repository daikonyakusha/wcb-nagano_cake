<div class="container">
 <div class="row">
 	<div class="col-sm6 col-md-4 col-lg-3 mr-2 mt-3 text-center bg-light">
   <h2>配送先編集</h2>
  </div>
 </div>
 <div class="row">
 	<div class="col-sm-12 col-md-10 col-lg-10 mr-2 mt-3">
 		<%= form_with model:@address, local:true do |f| %>
   <table class="table table-borderless">
   	<tr>
   		<th>郵便番号（ハイフンなし）</th>
   		<td><%= f.text_field :postal_code,style:"width:200px; height:35px;" %></td>
   	</tr>
   	<tr>
   		<th>住所</th>
   		<td><%= f.text_field :address,style:"width:400px; height:35px;" %></td>
   	</tr>
   	<tr>
   		<th>宛名</th>
   		<td><%= f.text_field :name,style:"width:200px; height:35px;" %></td>
   	</tr>
   </table>
   <div>
    <%= f.submit "変更内容を保存",class:"btn btn-success" %>
    <% end %>
   </div>
  </div>
</div>