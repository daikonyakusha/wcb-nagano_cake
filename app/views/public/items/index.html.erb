<div class="container">
 <div class="row mt-4">
  <div class="col-sm-6 col-md-4 col-lg-2 col-sm-offset-1 col-md-offset-1 col-lg-offset-1">
   <table class="table table-bordered genre-table">
     <tr>
      <th>ジャンル検索</th>
     </tr>
     <tr>
      <td>
       <% @genres.each do |genre| %>
       <%= link_to genre.name, items_path('search[value]': genre.id, ) %><br>
       <% end %>
      </td>
     </tr>
   </table>
  </div>
  <div class="col-sm-12 col-md-12 col-lg-10 m-auto">
   <div class="mt-5">
   </div>
   <% if @genre == nil %>
   <h2>商品一覧</h2><p>全<%= @total_item.count %>件</p>
   <% else %>
   <h2><%= @genre.name %>一覧</h2><p>全<%= @total_item.count %>件</p>
   <% end %>
    <div class="d-flex flex-wrap">
     <% @items.each do |item| %>
     <div class="d-flex flex-column mr-4">
      <%= link_to attachment_image_tag(item,:image,:fill,200,200, format: 'jpeg'),item_path(item) %>
      <%= link_to item.name,item_path(item) %>
      <%= number_to_currency(item.price,:precision => 0, :format => "%u%n", :unit => "￥") %>
     </div>
    <% end %>
    </div>
  </div>  
 </div>
 <div class="row">
  <div class="col-sm-12 col-md-12 col-lg-12">
    <%= paginate @items %>
  </div>
 </div>
</div>
