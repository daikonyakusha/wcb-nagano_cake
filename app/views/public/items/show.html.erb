<div class="container">
 <div class="row mt-4">
  <div class="col-sm-4 col-md-3 col-lg-2 col-sm-offset-1 col-md-offset-1 col-lg-offset-1">
   <table class="table table-hover">
     <tr>
      <th>ジャンル検索</th>
     </tr>
     <tr>
      <td>
       <% @genres.each do |genre| %>
       <%= link_to genre.name, items_path %><br>
       <% end %>
      </td>
     </tr>
   </table>
  </div>
  <div class="col-sm-8 col-md-8 col-lg-5 m-auto">
    <%= attachment_image_tag @item,:image,:fill,100,100 ,size: "200×200", format: 'jpeg' %>
  </div>
  <div class="col-sm-8 col-md-8 col-lg-5 m-auto">
    <div class>
      <strong><%= @item.name %></strong>
      <%= @item.introduction %>
      <%= number_to_currency(@item.price*1.1,:precision => 0, :format => "%u%n", :unit => "￥") %><p>(税込)</p>
    </div>
    <div class>
      <%= @item.name %>
      <%= form_with model:@cart_item ,url: cart_items_path ,local:true do |f| %>
       <%= f.hidden_field :item_id, value: @item.id %>
       <%= f.select :amount, *[1..10] %>
       <%= f.submit "カートに入れる" %>
      <% end %> 
    </div>
  </div>
 </div>
</div>